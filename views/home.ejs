                Tarefa #<%= tarefas.id %>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    <%= tarefas.titulo %>
                </h5>
                <p class="card-text"> 
                    <%= tarefas.descricao %>
                </p>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <%= tarefas.data_formatada %>
                </small>
            </div>
            </div>
            <% } %>
        </div>
    </div>
